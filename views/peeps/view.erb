<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
<body>
  <nav class="navbar navbar-expand-lg sticky-top navbar-dark bg-dark">
    <% if @user %>
    <a class="navbar-brand" href="/peeps">Chitter</a>
    <% else !@user %>
    <a class="navbar-brand" href="/">Chitter</a>
    <% end %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <% if @user %>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item">
          <a class="nav-link" href="/peeps/new">Create peep</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/sessions/destroy">Log out</a>
        </li>
      </ul>
    </div>
    <% else !@user %>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item">
          <a class="nav-link" href="/sessions/new">Log in</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/users/new">Sign up</a>
        </li>
      </ul>
    </div>
    <% end %>
  </nav>


  <div class="p-3 mb-2 bg-secondary text-white">
    <% if @user %>
      <h4>Welcome to Chitter, <%= @user.email %></h4>
    <% end %>
    <div class="container mt-4 mb-5">
        <div class="d-flex justify-content-center row">
            <div class="col-md-8">
                <div class="feed p-2">
                    <h2 class="fw-bold mb-2 text-uppercase text-center"><strong>Peeps list:</strong></h2>
                    <ul style="list-style-type:none;">
                        <% @peeps.each do |peep| %>
                        <li>
                          <div class="bg-dark text-white mt-1" style="border-radius: 1rem;">
                              <div>
                                  <div class="d-flex flex-row justify-content-between align-items-center p-2 border-bottom">
                                      <div class="d-flex flex-row align-items-center feed-text px-2">
                                          <div class="d-flex flex-column flex-wrap ml-2"><span class="font-weight-bold"><%= peep.user_id %></span><span class="text-white-50 time"><%= peep.time%></span></div>
                                      </div>
                                      <div class="feed-icon px-2"><i class="fa fa-ellipsis-v text-black-50"></i></div>
                                  </div>
                              </div>
                              <div class="p-2 px-3"><span><%= peep.message%></span></div>
                              <div class="d-flex justify-content-end socials p-2 py-3"><i class="fa fa-thumbs-up"></i><i class="fa fa-comments-o"></i><i class="fa fa-share"></i></div>
                          </div>
                        </li>
                      <% end %>
                    </ul>
                </div>
            </div>
        </div>
    </div>
  </div>
</body>
